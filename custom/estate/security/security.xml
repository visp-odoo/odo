<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">

    <!-- Category -->
    <record model="ir.module.category" id="module_category_estate">
        <field name="name">Estate</field>
        <field name="description">Helps you handle your estate and Property.</field>
        <field name="sequence">10</field>
    </record>

    <record model="ir.module.category" id="module_category_estate2">
        <field name="name">Estate</field>
        <field name="description">Helps you handle your Estate and Property</field>
        <field name="sequence">10</field>
        <field name="parent_id" ref="module_category_estate"/>
    </record>
    <!-- access Right -->
    <record id="group_estate_user" model="res.groups">
        <field name="name">User</field>
        <!-- <field name="name">Show Accounting Features - Readonly</field> -->
        <field name="category_id" ref="module_category_estate2"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_estate_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <!-- <field name="name">Show Accounting Features - Readonly</field> -->
        <field name="category_id" ref="module_category_estate2"/>
        <field name="implied_ids" eval="[(4, ref('group_estate_user'))]"/>
    </record>


<!-- Record Rules for Estate Property -->

        <record id="estate_prperty_offer_rule_agent" model="ir.rule">
            <field name="name">User Offer</field>
            <field name="model_id" ref="model_estate_property_offer"/>
            <field name="domain_force">[('partner_id','in', [user.partner_id.id])]</field>
            <field name="groups" eval="[(4, ref('group_estate_user'))]"/>
        </record>

        <record id="estate_property_offer_rule_manager" model="ir.rule">
            <field name="name">Administrator Offer</field>
            <field name="model_id" ref="model_estate_property_offer"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_estate_administrator'))]"/>
        </record>
    
    

</data>
</odoo>